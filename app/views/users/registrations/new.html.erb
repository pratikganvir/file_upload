<% if current_user.is_admin? %>
  <h2>Create a user</h2>
<% else %>
  <h2>Sign up</h2>
<% end %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>


  <div class="form-inputs">
    <%= f.input :name, :required => true, :autofocus => true %><br/>
    <%= f.input :email, :required => true, :autofocus => true  %><br/>
    <%= f.input :password, :required => true  %><br/>
    <%= f.input :age_range, collection: User::AGE_OPTIONS, :selected => User::SELECTED_AGE_OPTION %><br/>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
